{
  "name": "materia-client-assets",
  "version": "0.2.2-alpha2",
  "author": "University of Central Florida, Center for Distributed Learning",
  "homepage": "https://ucfopen.github.io/Materia-Docs",
  "scripts": {
    "test": "jest --verbose",
    "build": "webpack -p",
    "build-watch": "webpack --watch",
    "build-dev": "webpack",
    "prettier:run": "prettier --write='src/**/*.js'",
    "prettier:debug": "prettier --debug-check='src/**/*.js'",
    "precommit": "lint-staged"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "useTabs": true,
    "singleQuote": true
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn prettier:run",
      "git add"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./testSetup.js",
    "collectCoverageFrom":["src/**/*.{js,jsx}"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  },
  "dependencies": {
    "angular": "1.3.0",
    "angular-mocks": "1.3.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-angularjs-annotate": "^0.8.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "husky": "^0.14.3",
    "jest": "^22.3.0",
    "jquery": "1.8.2",
    "lint-staged": "^6.1.1",
    "node-sass": "^4.5.3",
    "prettier": "^1.10.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.2",
    "webpack": "^3.11.0",
    "whatwg-fetch": "^2.0.3"
  }
}
